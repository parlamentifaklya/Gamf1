<Window x:Class="valami.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anagram Calculator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Számok betöltése" Click="LoadNumbers_Click" Margin="10" Grid.Row="0"/>
        <ListBox x:Name="numberListBox" Margin="10" Grid.Row="1"/>
    </Grid>
</Window>
